<?xml version="1.0" encoding="utf-8"?>
<!--编辑框样式-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <gradient android:angle="45" />
    <!--设置边距-->
    <padding
        android:bottom="5dp"
        android:left="10dp"
        android:right="2dp"
        android:top="5dp" />
    <!-- 设置圆角矩形 -->
    <corners android:radius="7dp" />
  <!--设置边框粗细和颜色-->
    <stroke
        android:width="3px"
        android:color="#00000050" />
</shape>