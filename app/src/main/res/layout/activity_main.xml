<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/gray3"
    tools:context=".MainActivity">
    <com.zyao89.view.zloading.ZLoadingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:z_type="CircleBuilder"
        app:z_color="@color/black"
        android:id="@+id/zloadingView"
        tools:ignore="MissingConstraints" />
    <!-- 扫描二维码功能块 -->
    <LinearLayout

        android:id="@+id/scanLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_white_background"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.2">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sm"
            android:padding="8dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_white_background"
            android:scaleType="centerCrop"
            android:contentDescription="Scan Icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="扫描二维码"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

    </LinearLayout>



    <!-- 设置功能块 -->
    <LinearLayout
        android:id="@+id/settingsLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_white_background"
        app:layout_constraintTop_toBottomOf="@id/scanLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.1">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sz"
            android:padding="8dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:contentDescription="Settings Icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="设置"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

    </LinearLayout>
    <!-- 搜索功能块 -->
    <LinearLayout
        android:id="@+id/testLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_white_background"
        app:layout_constraintTop_toBottomOf="@id/settingsLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.1">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ss"
            android:padding="8dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rounded_white_background"
            android:scaleType="centerCrop"
            android:contentDescription="Search Icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="测试"

            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>